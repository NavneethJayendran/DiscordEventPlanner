{
  "name": "eventsplanner",
  "version": "1.0.0",
  "description": "Plan Discord events",
  "main": "index.ts",
  "author": "Navneeth Jayendran",
  "license": "MIT",
  "dependencies": {
    "@typeit/discord": "^4.0.10",
    "@types/argparse": "^2.0.8",
    "@types/humanize-duration": "^3.25.0",
    "@types/lodash.groupby": "^4.6.6",
    "@types/node": "^15.6.0",
    "@types/shell-quote": "^1.7.0",
    "@types/uuid": "^8.3.0",
    "argparse": "^2.0.1",
    "chrono-node": "^2.2.6",
    "class-transformer": "^0.4.0",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "humanize-duration": "^3.26.0",
    "lodash.groupby": "^4.6.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dbinit:dev": "mkdir -p build/db && (cp -n db/events.json build/db/events.json || true)",
    "build:dev": "yarn run dbinit:dev && tsc && cp .env build/.env",
    "start:dev": "yarn build:dev && concurrently --raw --kill-others \"tsc -w\" \"sleep 2.5 && nodemon build/main.js\"",
    "start:prod": "pm2 start build/main.js",
    "clean": "rm -rf build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "tsc": "^2.0.3"
  }
}
