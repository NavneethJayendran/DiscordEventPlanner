{
  "name": "eventsplanner",
  "version": "1.0.0",
  "description": "Plan Discord events",
  "main": "index.ts",
  "author": "Navneeth Jayendran",
  "license": "MIT",
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "@typeit/discord": "^4.0.10",
    "argparse": "^2.0.1",
    "chrono-node": "^2.2.6",
    "class-transformer": "^0.4.0",
    "discord-tts": "^1.1.0",
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "humanize-duration": "^3.26.0",
    "lodash.groupby": "^4.6.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "opusscript": "^0.0.8",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dbinit": "mkdir -p build/db && ((false | cp -i db/events.json build/db/events.json) || true)",
    "build": "tsc && yarn run dbinit && cp .env build/.env",
    "build:dev": "tsc && yarn run dbinit && cp .env.dev build/.env",
    "start:dev": "yarn build:dev && concurrently --raw --kill-others \"tsc -w\" \"sleep 2.5 && nodemon build/main\"",
    "start": "yarn build && pm2 start build/main.js",
    "clean": "rm -rf build"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.8",
    "@types/humanize-duration": "^3.25.0",
    "@types/lodash.groupby": "^4.6.6",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "tsc": "^2.0.3"
  }
}
